<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/child_imageView"
        android:background="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#ffffff"
        android:id="@+id/child_textView"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:layout_alignBottom="@+id/child_imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/child_btn_download"
        android:layout_alignBottom="@+id/child_textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_file_download"/>

</RelativeLayout>